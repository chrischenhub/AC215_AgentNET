{
  "agent": {
    "id": "urn:agent:notion:mcp",
    "type": "service",
    "name": "Notion MCP (Hosted)",
    "description": "Notion's hosted Model Context Protocol (MCP) server — lets AI assistants securely access and act on Notion workspaces (search workspace and connected tools, fetch pages/databases, create/update/move/duplicate pages & databases, comment management, user/team reads).",
    "provider": "Notion Labs, Inc.",
    "endpoint": "https://mcp.notion.com/mcp",
    "capabilities": [
      "search:workspace",
      "fetch:page",
      "create:pages",
      "update:page",
      "move:pages",
      "duplicate:page",
      "create:database",
      "update:database",
      "comment:create",
      "comment:list",
      "users:list",
      "teams:list",
      "self:get"
    ],
    "tags": [
      "notion",
      "mcp",
      "productivity",
      "a2a",
      "workspace"
    ],
    "auth_required": true,
    "auth_method": "OAuth2",
    "auth_docs": "https://developers.notion.com/docs/get-started-with-mcp",
    "trust_verified": true,
    "trust_popularity": 0.0,
    "trust_source": "notion-official",
    "created_at": "2025-07-15T00:00:00Z"
  },
  "tools": [
    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "search",
      "description": "Search across your Notion workspace and connected tools (Slack, Google Drive, Jira). Falls back to basic workspace search if AI features aren’t available.\nSample prompts:\n• \"Check slack for how we have solved this bug in the past\"\n• \"Search for documents mentioning 'budget approval process'\"\n• \"Look for meeting notes from last week with John\"\n• \"Find all project pages that mention 'ready for dev'\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": { "type": "string" },
          "limit": { "type": "integer", "minimum": 1, "maximum": 100, "default": 10 },
          "filters": { "type": "object", "additionalProperties": true },
          "source": { "type": "string", "enum": ["notion","slack","gdrive","jira","all"], "default": "all" }
        },
        "required": ["query"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "snippet": { "type": "string" },
                "url": { "type": "string", "format": "uri" },
                "source": { "type": "string" },
                "score": { "type": "number" }
              },
              "required": ["id","title","url"]
            }
          },
          "cursor": { "type": ["string","null"] }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "fetch",
      "description": "Retrieves content and metadata from a Notion page or database by URL or ID.\nSample prompts:\n• \"What are the product requirements still need to be implemented from this ticket https://notion.so/page-url?\"\n• \"Fetch full properties and content for page https://notion.so/page-url\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "id": { "type": "string" },
          "include_blocks": { "type": "boolean", "default": true },
          "include_properties": { "type": "boolean", "default": true }
        },
        "oneOf": [
          { "required": ["url"] },
          { "required": ["id"] }
        ]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "title": { "type": "string" },
          "properties": { "type": "object", "additionalProperties": true },
          "blocks": { "type": "array", "items": { "type": "object" } },
          "database_schema": { "type": ["object","null"] }
        },
        "required": ["id","url","title"]
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "create-pages",
      "description": "Creates one or more Notion pages with specified properties and content. If a parent is not specified, a private page will be created.\nSample prompts:\n• \"Create a project kickoff page under our Projects folder with agenda and team info\"\n• \"Make a new employee onboarding checklist in our HR database\"\n• \"Create a meeting notes page for today's standup with action items\"\n• \"Add a new product feature request to our feature database\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "pages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "parent": { "type": "object" },
                "properties": { "type": "object" },
                "children": { "type": "array", "items": { "type": "object" } },
                "publish": { "type": "boolean", "default": true }
              },
              "required": ["properties"]
            }
          }
        },
        "required": ["pages"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "created": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "page_id": { "type": "string" },
                "url": { "type": "string", "format": "uri" },
                "status": { "type": "string" }
              },
              "required": ["page_id","url"]
            }
          }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "update-page",
      "description": "Update a Notion page's properties or block content.\nSample prompts:\n• \"Change the status of this task from 'In Progress' to 'Complete'\"\n• \"Add a new section about risks to the project plan page\"\n• \"Update the due date on this project to next Friday\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "page_id": { "type": "string" },
          "properties": { "type": "object" },
          "patch_blocks": { "type": "array", "items": { "type": "object" } },
          "replace_blocks": { "type": "boolean" }
        },
        "required": ["page_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "page_id": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "required": ["page_id"]
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "move-pages",
      "description": "Move one or more Notion pages or databases to a new parent.\nSample prompts:\n• \"Move my weekly meeting notes page to the 'Team Meetings' page\"\n• \"Reorganize all project documents under the 'Active Projects' section\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "page_ids": { "type": "array", "items": { "type": "string" } },
          "new_parent": {
            "type": "object",
            "properties": { "type": { "type": "string" }, "id": { "type": "string" } },
            "required": ["type","id"]
          }
        },
        "required": ["page_ids","new_parent"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "moved": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": { "page_id": { "type": "string" }, "new_parent_id": { "type": "string" } }
            }
          }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "duplicate-page",
      "description": "Duplicate a Notion page within your workspace. This action is completed asynchronously.\nSample prompts:\n• \"Duplicate my project template page so I can use it for the new Q3 initiative\"\n• \"Make a copy of the meeting agenda template for next week's planning session\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "page_id": { "type": "string" },
          "target_parent": { "type": "object" },
          "include_children": { "type": "boolean", "default": true }
        },
        "required": ["page_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "job_id": { "type": "string" },
          "status": { "type": "string", "enum": ["queued","in_progress","completed","failed"] },
          "result": { "type": ["object","null"] }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "create-database",
      "description": "Create a new Notion database with the specified properties and schema.\nSample prompts:\n• \"Create a new database to track our customer feedback with fields for customer name, feedback type, priority, and status\"\n• \"Set up a content calendar database with columns for publish date, content type, and approval status\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "parent": { "type": "object", "required": ["type","id"] },
          "title": { "type": "string" },
          "properties_schema": { "type": "object" }
        },
        "required": ["parent","title","properties_schema"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "database_id": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "schema": { "type": "object" }
        },
        "required": ["database_id","url"]
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "update-database",
      "description": "Update a Notion database's properties, name, description, or other attributes.\nSample prompts:\n• \"Add a status field to track project completion\"\n• \"Update the task database to include priority levels\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "database_id": { "type": "string" },
          "patch": { "type": "object" }
        },
        "required": ["database_id","patch"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "database_id": { "type": "string" },
          "updated_schema": { "type": "object" }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "create-comment",
      "description": "Add a comment to a page or block. Note: block-level comments and threaded within-page discussions may be limited.\nSample prompts:\n• \"Add a feedback comment to this design proposal\"\n• \"Leave a note on the quarterly review page about budget concerns\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "page_id": { "type": "string" },
          "block_id": { "type": ["string","null"] },
          "content": { "type": "string" },
          "mentions": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["page_id","content"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "comment_id": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "get-comments",
      "description": "List all comments on a specific page, including threaded discussions if available.\nSample prompts:\n• \"List comments on the project requirements section\"\n• \"Get all feedback comments from last week's review\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "page_id": { "type": "string" },
          "limit": { "type": "integer", "default": 50 },
          "cursor": { "type": ["string","null"] }
        },
        "required": ["page_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "comments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "comment_id": { "type": "string" },
                "author_id": { "type": "string" },
                "content": { "type": "string" },
                "created_at": { "type": "string", "format": "date-time" },
                "replies": { "type": "array", "items": { "type": "object" } }
              }
            }
          },
          "next_cursor": { "type": ["string","null"] }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "get-teams",
      "description": "Retrieve a list of teams (teamspaces) in the current workspace.\nSample prompts:\n• \"Search for teams by name, and your membership status in each team\"\n• \"Get a team's ID to use as a filter for a search\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": { "type": "string" },
          "limit": { "type": "integer", "default": 50 }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "teams": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "team_id": { "type": "string" },
                "name": { "type": "string" },
                "membership": { "type": "string" }
              }
            }
          }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "get-users",
      "description": "List all users in the workspace with profile details.\nSample prompts:\n• \"Get contact details for the user who created this page\"\n• \"Look up the profile of the person assigned to this task\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": { "type": "string" },
          "limit": { "type": "integer", "default": 100 }
        }
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "users": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "user_id": { "type": "string" },
                "name": { "type": "string" },
                "email": { "type": "string", "format": "email" },
                "avatar_url": { "type": "string", "format": "uri" },
                "role": { "type": "string" }
              }
            }
          }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "get-user",
      "description": "Retrieve a single user's information by ID.\nSample prompts:\n• \"What's my email address?\"\n• \"What's my Notion user ID?\"",
      "input_schema": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string" }
        },
        "required": ["user_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string" },
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "role": { "type": "string" }
        }
      }
    },

    {
      "agent_id": "urn:agent:notion:mcp",
      "name": "get-self",
      "description": "Retrieve information about the connected bot user and workspace context.\nSample prompts:\n• \"Which Notion workspace am I currently connected to?\"\n• \"What's my file size upload limit for the current workspace?\"",
      "input_schema": {
        "type": "object",
        "properties": {}
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "bot_user_id": { "type": "string" },
          "workspace_id": { "type": "string" },
          "workspace_name": { "type": "string" },
          "limits": { "type": "object", "additionalProperties": true }
        }
      }
    }
  ]
}
